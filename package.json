{
  "name": "alpinejs-booster",
  "version": "1.0.0-alpha",
  "description": "alpinejs-booster provides additional directives, magic functions, and utilities for a more productive development experience",
  "author": {
    "name": "Rameel Burhan",
    "email": "rameel-b@hotmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alpinejs-booster/alpinejs-booster.git"
  },
  "keywords": [
    "alpine.js",
    "alpinejs plugin",
    "alpinejs directive",
    "alpinejs magic",
    "alpinejs helper",
    "alpinejs history",
    "alpinejs routing",
    "alpinejs router",
    "alpinejs hotkey",
    "alpinejs shortcut",
    "alpinejs binding"
  ],
  "main": "dist/alpinejs-booster.js",
  "module": "dist/alpinejs-booster.esm.js",
  "scripts": {
    "dev": "rollup -c --watch",
    "build": "cross-env NODE_ENV=production rollup -c",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "cypress": "npm run build && cypress open",
    "test": "npm run build && vitest run && cypress run",
    "test:cypress": "npm run build && cypress run",
    "test:dev": "vitest",
    "coverage": "vitest run --coverage"
  },
  "peerDependencies": {
    "alpinejs": "^3.12.1"
  },
  "devDependencies": {
    "@ramstack/hotkey": "^1.0.2",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "cross-env": "^7.0.3",
    "cypress": "^13.6.5",
    "jsdom": "^24.0.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "strip-comments": "^2.0.1",
    "terser": "^5.27.2",
    "vitest": "^1.3.1"
  }
}
